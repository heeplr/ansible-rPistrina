# raspberry OS to use
#download_os: "raspbian"

# OS flavor
#download_os_flavor: "lite"

# directory for sdcard image and mountpoints (will be created)
# needs enough space for downloaded archive and full extracted image
#rpi_workdir: "/tmp/ansible-rpistrina"

# set to delete all files from rpi_workdir after sdcard was written
#sdcard_cleanup: yes

# set to write image to sdcard (the device sdcard_dev points to)
#sdcard_burn: yes

# (don't) pause & prompt before writing image to device
#sdcard_confirm: no

# sdcard device (WARNING: All data on this device will be destroyed!)
#sdcard_dev: /dev/sdX

# --------------------------------------------------------------------------
# set hostname (or use custom hostname.j2)
#hostname: "myraspberry"
#hostname_template: my_hostname.j2

# wifi config (or use custom wpa_supplicant.conf.j2)
#wifi_country: "US"
#wifi_ssid: "mywifi"
#wifi_psk: "mypassword"
#wifi_wpa_supplicant_template: my_wpa_supplicant.conf.j2

# set to generate ssh keys
#ssh_generate_keypair: yes

# set authorized public key (or use custom authorized_keys.j2)
#ssh_authorized_key: ""
#ssh_authorized_keys_template: my_authorized_keys.j2

# set custom sshd_config
#sshd_config_template: my_sshd_config.j2
