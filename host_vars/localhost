# raspberry OS to use
os: "raspbian"

# OS flavor
os_flavor: "lite"

# directory for sdcard image and mountpoints (will be created)
# needs enough space for downloaded archive and full extracted image
workdir: "/tmp/ansible-rpistrina"

# set to delete all files from workdir after sdcard was written
cleanup: no

# set to write image to sdcard (the device sdcard_dev points to)
sdcard_burn: yes

# pause & prompt before writing image to device
sdcard_confirm: yes

# sdcard device (WARNING: All data on this device will be destroyed!)
sdcard_dev: /dev/sdX

# --------------------------------------------------------------------------
# hostname to set
hostname: myraspberry

# wifi settings (or use own wpa_supplicant.conf.j2 template)
wifi_country: "US"
wifi_ssid: "mywifi"
wifi_psk: "mypassword"

# set to generate ssh keys
generate_ssh_keypair: no

# uncomment to copy custom files/sshd_config to image
#sshd_config_file: sshd_config

# uncomment to copy custom files/authorized_keys to image
#authorized_keys_file: authorized_keys

# uncomment to copy custom wpa_supplicant.conf to image
#wpa_supplicant_conf_file: wpa_supplicant.conf
